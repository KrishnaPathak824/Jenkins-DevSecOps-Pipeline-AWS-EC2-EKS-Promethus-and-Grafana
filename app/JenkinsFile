@Library('shared-library') _
pipeline {
    agent any

    environment {
        SONAR_HOME = tool name: 'Sonarqube'
    }

    stages {
        stage('Workspace CleanUp') {
            steps {
                cleanWs()
            }
        }
    
        stage('Cloning the repo') {
            steps {
                script{
                    clone("https://github.com/KrishnaPathak824/Blog-App.git","main")
                }
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                script{
                    trivy()
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Install dependencies for all relevant directories
                    sh 'cd app/frontend/ && npm install'
                    sh 'cd app/backend1/ && npm install'
                    sh 'cd app/backend2/ && npm install'
                }   
            }
        }

        stage('Owasp: Dependency Check') {
            steps {
                script{
                    owaspDependencyCheck()
                }
            }
        }

        stage('SonarQube Code Analysis Scan') {
            steps {
                script{
                    sonarqube("Sonarqube","blog-app","blog-app")
                }
            }
        }

        stage('SonarQube Quality Gate') {
            steps {
                script{
                    sonarqube_code_quality()
                }
            }
        }

        stage('image-build') {
            parallel{
                stage('Frontend Image Build') {
                    steps {
                        script{
                            dockerBuild('blog-app-frontend','app/code/frontend')
                        }
                    }
                }
                stage('Backend1 Image Build') {
                    steps {
                        script{
                            dockerBuild('blog-app-backend1','app/code/backend1')
                        }
                    }
                }
                stage('Backend2 Image Build') {
                    steps {
                        script{
                            dockerBuild('blog-app-backend2','./backend2')
                        }
                    }
                }
            }
        }

        stage("Push to DockerHub")
        {
            parallel{
                stage('Frontend Push') {
                    steps {
                        script{
                            dockerTagAndPush('blog-app-frontend')
                        }
                    }
                }
                stage('Backend1 Push') {
                    steps {
                        script{
                            dockerTagAndPush('blog-app-backend1')
                        }
                    }
                }
                stage('Backend2 Push') {
                    steps {
                        script{
                            dockerTagAndPush('blog-app-backend2')
                        }
                    }
                }
            }
        }
    }
}